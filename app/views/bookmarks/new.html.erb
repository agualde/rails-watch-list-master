<div data-controller="search-movies">
  <div class="container">
    <div class="row">
      <div class="col col-md-4 mt-5" style="margin: auto; width: fit-content;">
        <h1 class="mb-3" >Add a movie</h1>
      </div>
      <div>
        <%= form_with url: movies_path, method: :get, html: { class:
          'mb-4', data: { search_movies_target: 'form' } } do |f| %>
          <%= f.text_field :query,
                          class: "form-control",
                          placeholder: 'Type a movie title',
                          value: params[:query],
                          data: {
                            search_movies_target: 'input',
                          action: 'keyup->search-movies#update'
                        } %>
                          <% end %>
        </div>
        <%= link_to "cancel", list_path(@list), class: "btn kill-link kill-decoration", id: "cancel-form" %>
  </div>
  <div class="display" data-search-movies-target="list">
  <%= render "movies/list" %>
</div>
